<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
        android:id="@+id/listaPessoa"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        app:cardElevation="4dp"
        android:layout_margin="5dp"
        app:cardCornerRadius="10dp"
        app:cardPreventCornerOverlap="false">

  <RelativeLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.cardview.widget.CardView
            android:id="@+id/cardViewImage"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            app:cardCornerRadius="40dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="16dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="16dp"
    android:layout_marginBottom="8dp">

        <ImageView
                android:id="@+id/imageView"
                android:layout_width="80dp"
                android:layout_height="80dp"
                tools:srcCompat="@tools:sample/avatars[0]"
                android:scaleType="fitCenter"/>
    </androidx.cardview.widget.CardView>

    <TextView
            android:id="@+id/txtLabelName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nome:"
            android:layout_alignTop="@id/cardViewImage"
            android:layout_toRightOf="@id/cardViewImage"
            android:layout_marginLeft="8dp"
            android:textSize="16sp"
            android:textStyle="bold"/>

    <TextView android:id="@+id/txtName"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="nome"
              android:layout_alignTop="@id/txtLabelName"
              android:layout_toRightOf="@id/txtLabelName"
              android:layout_marginLeft="8dp"
              android:textSize="16sp"/>

    <TextView android:id="@+id/txtLabelLastName"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Sobrenome:"
              android:layout_below="@id/txtLabelName"
              android:layout_toRightOf="@id/cardViewImage"
              android:layout_marginLeft="8dp"
              android:textSize="16sp"
              android:layout_marginTop="8dp"
              android:textStyle="bold"/>

    <TextView android:id="@+id/txtLastName"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="sobrenome"
              android:layout_below="@id/txtLabelName"
              android:layout_toRightOf="@id/txtLabelLastName"
              android:layout_marginLeft="8dp"
              android:textSize="16sp"
              android:layout_marginTop="8dp"/>

    <TextView android:id="@+id/txtLabelIdade"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Idade:"
              android:layout_below="@+id/txtLabelLastName"
              android:layout_toEndOf="@id/cardViewImage"
              android:layout_marginLeft="8dp"
              android:layout_marginTop="8dp"
              android:textSize="16sp"
              android:textStyle="bold"/>

    <TextView android:id="@+id/txtIdade"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="idade"
              android:layout_below="@+id/txtLabelLastName"
              android:layout_toEndOf="@id/txtLabelIdade"
              android:layout_marginLeft="8dp"
              android:layout_marginTop="8dp"
              android:textSize="16sp"/>

    <ImageView android:id="@+id/ic_edit"
               android:layout_width="32dp"
               android:layout_height="32dp"
               android:src="@drawable/ic_edit"
               android:layout_toStartOf="@id/ic_delete"
               android:layout_below="@id/txtName"
               android:layout_marginTop="8dp"
               android:layout_marginRight="16dp" android:layout_marginStart="16dp" android:layout_marginEnd="16dp"
               android:layout_marginBottom="16dp"/>

    <ImageView android:id="@+id/ic_delete"
               android:layout_width="32dp"
               android:layout_height="32dp"
               android:src="@drawable/ic_delete"
               android:layout_alignParentRight="true"
               android:layout_below="@id/txtName"
               android:layout_marginTop="8dp"
               android:layout_marginRight="16dp"/>

    </RelativeLayout>
</androidx.cardview.widget.CardView>


