<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="256dp"
        android:layout_height="150dp"
        app:cardCornerRadius="30dp">

    <RelativeLayout
            android:layout_width="256dp"
            android:layout_height="150dp"
            android:layout_marginTop="16dp">

        <TextView
                android:id="@+id/titleOptions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="10dp"
                android:text="Esolha uma das opções abaixo"
                android:textSize="16sp" />

        <TextView
                android:id="@+id/tvGaleria"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/imgGallery"
                android:layout_alignEnd="@id/imgGallery"
                android:layout_marginTop="16dp"
                android:text="Galeria"
                android:textSize="16sp" />

        <ImageView
                android:id="@+id/imgCamera"
                android:layout_width="35dp"
                android:layout_height="33dp"
                android:layout_below="@id/titleOptions"
                android:layout_marginLeft="32dp"
                android:layout_marginTop="16dp"
                android:src="@drawable/ic_photo_camera_gray" />

        <ImageView
                android:id="@+id/imgGallery"
                android:layout_width="35dp"
                android:layout_height="33dp"
                android:layout_below="@id/titleOptions"
                android:layout_marginLeft="128dp"
                android:layout_marginTop="16dp"
                android:layout_toRightOf="@id/imgCamera"
                android:src="@drawable/ic_photo_library_gray" />

        <TextView
                android:id="@+id/tvCamera"
                android:layout_width="70dp"
                android:layout_height="19dp"
                android:layout_below="@id/imgCamera"
                android:layout_alignStart="@id/imgCamera"
                android:layout_marginTop="16dp"
                android:text="Câmera"
                android:textSize="16sp" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>
